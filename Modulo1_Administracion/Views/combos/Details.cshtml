@model Modulo1_Administracion.Models.combos

@{
    ViewData["Title"] = "Detalles del combo";
}

<hr class="hrHorizontal">

<div class="d-flex ms-5 mt-3">
    <div class="icono">
        <img src="https://firebasestorage.googleapis.com/v0/b/dulcesabor-imagenes.appspot.com/o/hamburguesa.png?alt=media&token=4d72cf41-4b0c-454e-b959-82ee2f77e9d4" alt="">
    </div>

    <dl class="row">
        <dt class="col-sm-2">
            
            <br />
        </dt>
        
    </dl>

    <div class="tituloTexto align-middle ms-3">
        <h1>Detalles de combos</h1>
        <h5>Visualizar los elementos del combo</h5>
    </div>
</div>

<hr class="hrHorizontal">

<div class="mt-3" style="margin-left: 140px; width: 83%;">
    <div class="d-flex w-100">
        <div class="w-50 ">
            <dd><h4 class="ms-2">Detalles: @Model.descripcion</h4></dd>
        </div>
        <div class="w-50 ">
            <h4>Editar combo</h4>
        </div>
    </div>

    <div class="d-flex">
        <div class="mt-4" style="width: 45%;">
            <table class="w-100" style="font-size: 1.3vw;">
                <thead>
                    <tr style="color: white; background-color: #a60c18;">
                        <th width="8%" scope="col" class="text-center ">Id</th>
                        <th width="45%" scope="col">Combo</th>
                        <th width="30%" scope="col">Cantidad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (IEnumerable<dynamic>)ViewData["itemsCombo"])
                    {
                        <tr style="background-color: white;">
                            <td scope="row" class="text-center ">@item.id</td>
                            <td>@item.nombre_plato</td>
                            <td>Cantidad</td>
                        </tr>

                        <tr style="height: 3px;">
                            <!-- Espacio -->
                        </tr>
                    }
                </tbody>
            </table>

            <nav style="margin-top: 2px;">
                <ul class="navPaginacion bg-light w-100">
                    <li class="page-item1"><a href="#">&lt; Anterior</a></li>
                    <div class="d-flex ">
                    <li class="page-item"><a href="#">1</a></li>
                    <li class="page-item"><a href="#">2</a></li>
                    <li class="page-item"><a href="#">3</a></li>
                    <li class="page-item"><a href="#">4</a></li>
                    <li class="page-item" style="border-right: solid grey; border-width: 1px;"><a href="#">5</a></li>
        </div>
        <li class="page-item1"><a href="#">Siguiente &gt;</a></li>
        </ul>
        </nav>
    </div>

    <hr class="position-absolute " style="height: 64%; top: 16%; left: 48%; border-left: solid #000;">

    <div class="container ms-5 mt-4 w-50 align-middle">
        <form asp-action="EditCombo">
            <input type="hidden" asp-for="@Model.id_combo" />
            <div class="row align-items-start mb-2">
                <div class="col-3">
                    <h5>Nombre:</h5>
                </div>
                <div class="col">
                    <input type="text" asp-for="descripcion" placeholder="Combo PolloCrisp" class="size-text" value="@Model.descripcion">
                </div>
            </div>

            <div class="row align-items-start mt-3 ">
                <div class="col-3">
                    <h5>Descripción:</h5>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <textarea class="size-area" placeholder="Disfruta de nuestro combo de comida hamburguesa de pollo jugoso acompañada papas, con una soda de naranja, pie de manzana."
                                  id="floatingTextarea"></textarea>
                    </div>
                </div>
            </div>

            <div class="row align-items-start mt-3 ">
                <div class="col-3">
                    <h5>Precio:</h5>
                </div>
                <div class="col d-flex ">
                    <input type="number" asp-for="precio" class="size-text" placeholder="10.49" value="@Model.precio">
                    <h5 class="ms-3 me-3 ">Estado:</h5>
                    <select class="size-combo"asp-for="id_estado" aria-label="Default select example">
                        <option selected style="color: #D0D3D9; font-size: 1.3vw;">@Model.id_estado</option>
                            @foreach (var item in (IEnumerable<dynamic>)ViewData["listadoDeEstados"])
                            {
                                <option value="@item.id_estado">@item.nombre</option>
                            }
                    </select>
                </div>
            </div>

            <div class="row align-items-start mt-3 mb-2">
                <div class="col-3">
                    <h5>Imagen (URL):</h5>
                </div>
                <div class="col">
                    <input type="text" placeholder="https//:assets.elgourmet.com/wp-conte..." class="size-text">
                </div>
            </div>

            <a href="#">Agregar nuevo item</a>

            <div class="row mt-3 mb-2">
                <div class="col-3">
                </div>
                <div class="col d-flex justify-content-end">
                    <input type="submit" value="Editar combo" class="botones">
                </div>
            </div>
        </form>
    </div>


    </div>
</div>