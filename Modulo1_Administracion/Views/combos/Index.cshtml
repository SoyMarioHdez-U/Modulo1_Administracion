@{
    ViewData["Title"] = "Index";
}

@* INDEX *@


<hr class="hrHorizontal">

<div class="d-flex ms-5 mt-3">
    <div class="icono">
        <img src="" alt="">
    </div>

    <div class="tituloTexto align-middle ms-3">
        <h1>Creación de Combos</h1>
        <h5>Agregar nuevos elementos al menú</h5>
    </div>
</div>

<hr class="hrHorizontal">

<div class="mt-3" style="margin-left: 140px; width: 83%;">
    <div class="d-flex w-100 ">
        <h4 class="ms-2">Administración del combos</h4>
        <h4 style="margin-left: 360px;">Listado de combos</h4>
    </div>

    @* INICIO DE LA SECCION CREAR COMBO (FORMULARIO) *@

    <div class="d-flex">
        <form asp-action="CreateCombo">
            <div class="container mt-4 w-100 align-middle">
                <div class="row align-items-start mb-2">
                    <div class="col-3">
                        <h5>Nombre:</h5>
                    </div>
                    <div class="col">
                        <input type="text" placeholder="Combo PolloCrisp" class="size-text">
                    </div>
                </div>

                <div class="row align-items-start mt-3 ">
                    <div class="col-3">
                        <h5>Descripción:</h5>
                    </div>
                    <div class="col">
                        <div class="d-flex">
                            @Html.TextArea("descripcion", "", new { @class = "form-control", id = "idDireccion", @placeholder = "Disfruta de nuestro combo de comida hamburguesa de pollo jugoso acompañada papas, con una soda de naranja, pie de manzana." })
                            @* <textarea asp-for="descripcion" class="size-area" placeholder="Disfruta de nuestro combo de comida hamburguesa de pollo jugoso acompañada papas, con una soda de naranja, pie de manzana."
                                      id="floatingTextarea"></textarea> *@

                        </div>
                    </div>
                </div>

                <div class="row align-items-start mt-3 ">
                    <div class="col-3">
                        <h5>Precio:</h5>
                    </div>
                    <div class="col d-flex ">
                        @Html.TextBox("precio", "", new { @class = "size-text" })
                        @* <input asp-for="precio" type="text" class="size-text" placeholder="10.49"> *@
                        <h5 class="ms-3 me-3 ">Estado:</h5>
                        @Html.DropDownList("id_estado", ViewData["listadoDeEstados"] as SelectList, "Seleccione...", new { @class = "size-combo" })
                        @* <select class="size-combo" aria-label="Default select example">
                            <option selected style="color: #D0D3D9; font-size: 1.3vw;">Activo</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select> *@

                    </div>
                </div>

                <div class="row align-items-start mt-3 mb-2">
                    <div class="col-3">
                        <h5>Imagen (URL):</h5>
                    </div>
                    <div class="col">
                        <input type="file" name="imagen" id="imagen" class="form-control" value="" />
                        @* <input asp-for="imagen" type="text" placeholder="https//:assets.elgourmet.com/wp-conte..." class="size-text"> *@

                    </div>
                </div>

                <div class="row align-items-start mt-3 mb-2">
                    <div class="col-3">
                        <h5>Items</h5>
                    </div>
                    <div class="col">
                        @* @Html.DropDownList("id_combo", ViewData["listadoDePlatos"] as SelectList, "Seleccione...", new { @class = "size-combo" }) *@
                        @* <select class="size-combo" aria-label="Default select example">
                            <option selected>(Seleccionar items...)</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select> *@
                    </div>
                </div>

                <a href="#">Agregar nuevo item</a>

                <div class="row mt-3 mb-2">
                    <div class="col-3">
                    </div>
                    <div class="col d-flex justify-content-end">
                        <input type="submit" value="Crear combo" class="botones">
                    </div>
                </div>
            </div>
        </form>

        @* FIN DE LA SECCION CREAR COMBO (FORMULARIO) *@

        <hr class="position-absolute " style="height: 50%; top: 20%; left: 50.5%; border-left: solid #000;">

        <div class="ms-5 mt-4 w-50">
            <table class="w-100" style="font-size: 1.3vw;">
                <thead>
                    <tr style="color: white; background-color: #a60c18;">
                        <th width="8%" scope="col" class="text-center ">Id</th>
                        <th width="45%" scope="col">Combo</th>
                        <th width="30%" scope="col">Precio</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (IEnumerable<dynamic>)ViewData["listadoDeCombos"])
                    {
                        <tr style="background-color: white;">
                            <td scope="row" class="text-center ">@item.id</td>
                            <td>@item.nombre</td>
                            <td>@item.precio</td>
                            <td><a href="#">Detalles</a></td>
                        </tr>
                        <tr style="height: 3px;">
                            <!-- Espacio -->
                        </tr>
                    }
                    @* <tr style="background-color: white; margin-top: 200%;">
                    <td scope="row" class="text-center ">2</td>
                    <td>TripleCheese Combo</td>
                    <td>12.99</td>
                    <td><a href="#">Detalles</a></td>
                    </tr>

                    <tr style="height: 3px;">
                    <!-- Espacio -->
                    </tr>
                    <tr style="background-color: white; margin-top: 200%;">
                    <td scope="row" class="text-center ">3</td>
                    <td>MexiWrap</td>
                    <td>9.99</td>
                    <td><a href="#">Detalles</a></td>
                    </tr>

                    <tr style="height: 3px;">
                    <!-- Espacio -->
                    </tr>
                    <tr style="background-color: white; margin-top: 200%;">
                    <td scope="row" class="text-center ">4</td>
                    <td>Papas Monstruosas</td>
                    <td>11.49</td>
                    <td><a href="#">Detalles</a></td>
                    </tr>

                    <tr style="height: 3px;">
                    <!-- Espacio -->
                    </tr>
                    <tr style="background-color: white; margin-top: 200%;">
                    <td scope="row" class="text-center ">5</td>
                    <td>BBQ Feast Combo</td>
                    <td>20.99</td>
                    <td><a href="#">Detalles</a></td>
                    </tr>

                    <tr style="height: 3px;">
                    <!-- Espacio -->
                    </tr>
                    <tr style="background-color: white; margin-top: 200%;">
                    <td scope="row" class="text-center ">6</td>
                    <td>CrispyCrunch Combo</td>
                    <td>14.99</td>
                    <td><a href="#">Detalles</a></td>
                    </tr> *@
                </tbody>
            </table>

            <nav style="margin-top: 2px;">
                <ul class="navPaginacion bg-light w-100">
                    <li class="page-item1"><a href="#">&lt; Anterior</a></li>
                    <div class="d-flex ">
                    <li class="page-item"><a href="#">1</a></li>
