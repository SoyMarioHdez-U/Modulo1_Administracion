                            <input type="hidden" name="id_estado" value="@Model?.id_estado" />
                            <input type="submit" value="Despedir" class="botones">
                        </form>
                    }
                </div>


            </dl>
        </div>



        <div>
            <a asp-action="Edit" asp-route-id="@Model?.id_empleado">Editar</a> |
            <a asp-action="empleadosIndex">Volver</a>
        </div>



    </div>
</div>