                    @if (Model?.id_estado == 4)
                    {
                        <form id="form-@Model?.id_empleado" method="post" asp-action="EditarEstado" asp-route-id="@Model?.id_empleado">
                            <input type="hidden" name="id_estado" value="@Model?.id_estado" />
